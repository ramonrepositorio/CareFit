@model CareFit.Portal.Models.Trainig.PeoplesVM


<script src="~/Content/js/jquery/jquery.mask.js"></script>
<script src="~/Content/js/Trainig/peoples.js"></script>
<div class="page-heading animated fadeInDownBig">
    <h1>Alunos </h1>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i>Filtros para a busca de pessoas
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form">

                    <div class="form-group">
                        <label class="sr-only" for="machine-name">Nome</label>
                        <input type="text" class="form-control" id="people-name" placeholder="Nome do aluno">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="machine-name">CPF</label>
                        <input type="text" class="form-control" id="people-cpf" placeholder="CPF do aluno">
                    </div>
                    <button type="button" class="btn btn-default"  id="search-people">
                        <span class="glyphicon glyphicon-search"></span> Pesquisar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" style="display: none" id="panel-people-list">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i>Resultado da busca de pessoas
            </div>
            <div class="panel-body" id="people-list">
            </div>
        </div>
    </div>
</div>
