@model CareFit.Portal.Models.Authentication.ResetPasswordVM

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LayoutAuthentication.cshtml";
}


<script src="~/Content/js/Global/Utils.js"></script>
<script src="~/Content/js/Authentication/resetPassword.js"></script>

<!-- Begin Login Page -->
<div class="full-content-center animated fadeInDownBig">
    <a href="#fakelink">
        <img src="/Content/Laceng/assets/img/logo.png" class="logo-login img-circle" alt="Logo"></a>
    <div class="login-wrap">
        <div class="box-info">
            @if (Model.People == null)
            {
                <h2 class="text-center"><strong>CareFit</strong> Trocar Senha</h2>
                <form method="GET" role="form" action="@Url.Action("ResetPassword", "Authentication")">
                    <div class="form-group login-input">
                        <i class="fa fa-key overlay"></i>
                        <input type="email" class="form-control text-input" placeholder="Email" name="mail" value="">
                    </div>
                    <div class="form-group login-input">
                        <i class="fa fa-key overlay"></i>
                        <input type="text" class="form-control text-input" placeholder="Código do Email" name="token" value="">
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-success btn-block"><i class="fa fa-unlock"></i>Entrar</button>
                        </div>
                    </div>
                </form>
            }
            else
            {
                <h2 class="text-center"><strong>CareFit</strong> Trocando Senha</h2>
                <form method="POST" role="form" action="@Url.Action("ChangePassword", "Authentication")">
                    <div class="form-group login-input">
                        <i class="fa fa-key overlay"></i>
                        <input type="password" class="form-control text-input" placeholder="Nova Senha" name="newPassword" value="">
                    </div>
                    <div class="form-group login-input">
                        <i class="fa fa-key overlay"></i>
                        <input type="password" class="form-control text-input" placeholder="Repetir Nova Senha" name="confirm-password" value="">
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-success btn-block"><i class="fa fa-unlock"></i>Entrar</button>
                        </div>
                    </div>
                </form>
            }
        </div>

        @if (!string.IsNullOrEmpty(Model.Error))
        {                
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <strong>Atenção!</strong> @Model.Error
            </div>
        }
    </div>
</div>
<!-- End Login Page -->
