@model CareFit.Portal.Models.Machine.IndexVM


<script src="~/Content/js/jquery/jquery.mask.js"></script>
<script src="~/Content/js/Machine/index.js"></script>
<div class="page-heading animated fadeInDownBig">
    <h1>CareFit <small>Equipamentos</small></h1>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i>Filtros para a busca de equipamentos
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form">
                    <div class="form-group">
                        <select class="form-control" id="machine-type">
                            <option value="-1" disabled selected>Tipo do Equipamento</option>
                            @foreach (var machineType in Model.MachineTypes)
                            {
                                <option id="@machineType.ID">@machineType.Descricao</option>
                            }
                        </select>
                    </div>
                    @if (@Model.Rooms != null)
                    {
                        <div class="form-group">
                            <select class="form-control" id="machine-room">
                                <option value="-1" disabled selected>Sala</option>
                                @foreach (var room in Model.Rooms)
                                {
                                    <option id="@room.ID">@room.Nome</option>
                                }
                            </select>
                        </div>
                    }
                    <div class="form-group">
                        <label class="sr-only" for="machine-name">Equipamento</label>
                        <input type="text" class="form-control" id="machine-name" placeholder="Nome do Equipamento">
                    </div>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Buscar equipamentos utilizando os filtros selecionados" id="search-machine">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Cadastrar novo Equipamento" id="add-new-machine">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" style="display: none" id="panel-machine-list">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i>Resultado da busca de equipamentos
            </div>
            <div class="panel-body" id="machine-list">
            </div>
        </div>
    </div>
</div>
