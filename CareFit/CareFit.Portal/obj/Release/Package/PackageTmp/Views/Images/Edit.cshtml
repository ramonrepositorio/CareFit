@model CareFit.Portal.Models.Images.PeopleAvatarVM

<link href="~/Content/Componentes/JCrop/css/jquery.Jcrop.min.css" rel="stylesheet" />

<script src="~/Content/Componentes/JCrop/js/jquery.Jcrop.min.js"></script>
<script src="~/Content/Componentes/JCrop/js/jquery.color.js"></script>
<script src="~/Content/Componentes/jquery.form/jquery.form.min.js"></script>
<script src="~/Content/js/Images/Edit.js"></script>


<img src="@Model.Image.Url" id="image-image" style="height: 250px;" />
<form action="/Images/Upload" method="post" enctype="multipart/form-data" id="form-upload-image">

    <div class="form-group">
        <input type="file" class="btn btn-default" title="Search for a file to add" id="image-input-file" name="file"> 
        <p class="help-block">Example block-level help text here.</p>
        
    </div>



    <div class="progress progress-sm progress-striped active" id="image-progress-panel" style="display: none">
        <div class="progress-bar bg-color-darken" role="progressbar" style="width: 45%"></div>
    </div>
</form>

<button class="btn btn-default pull-right" disabled id="image-crop-button">
    <i class="fa fa-cut"></i>&nbsp;Cortar
</button>

